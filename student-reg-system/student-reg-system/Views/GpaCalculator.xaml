<Page x:Class="student_reg_system.Views.GpaCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:student_reg_system.Views"
        mc:Ignorable="d"
        Title="GpaCalculator" Height="450" Width="800">
    
    <Grid Background="White">
        <TextBox HorizontalAlignment="Left" Margin="51,32,0,0" TextWrapping="Wrap" Text="Enter Student ID" VerticalAlignment="Top" Width="210" Height="34" FontSize="9" TextChanged="TextBox_TextChanged" Background="#FFC8E8C2"/>
        
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=0}" Margin="51,149,85,120" AutoGenerateColumns="False">
            <DataGrid.Columns>

                <DataGridTextColumn HeaderStringFormat="moduleId" Header="Module ID" Width="1.5*"/>
                <DataGridTextColumn HeaderStringFormat="moduleName" Header="Module Name" Width="4*"/>
                <DataGridTextColumn HeaderStringFormat="noOfCredits" Header="No Of Credits" Width="*"/>
                <DataGridComboBoxColumn HeaderStringFormat="grade" Header="Grade" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock HorizontalAlignment="Left" Height="25" Margin="517,346,0,0" TextWrapping="Wrap" Text="GPA" VerticalAlignment="Top" Width="110" Background="#FFAFBAD0"/>
        <TextBlock HorizontalAlignment="Left" Height="25" Margin="627,346,0,0" TextWrapping="Wrap" Text="Null" VerticalAlignment="Top" Width="88" Background="#FFBDBDBD"/>
        <TextBox HorizontalAlignment="Left" Margin="51,85,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="210" Height="38" FontSize="9" TextChanged="TextBox_TextChanged" Background="#FFE3EDE1"/>
        <Button Content="Calculate GPA" HorizontalAlignment="Left" Height="33" Margin="51,393,0,0" VerticalAlignment="Top" Width="88" Click="Button_Click" UseLayoutRounding="False"/>
        <Button Content="Add Student" HorizontalAlignment="Left" Height="34" Margin="279,32,0,0" VerticalAlignment="Top" Width="88" Click="Button_Click" UseLayoutRounding="False" Background="#FF559CDE"/>

    </Grid>
</Page>
