<Window x:Class="student_reg_system.Views.StudentRegView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:student_reg_system.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:StudentRegVM}"
        mc:Ignorable="d"
        Title="StudentRegView" Height="550" Width="800">
    
   
    

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="54,34,0,0" TextWrapping="Wrap" Text="Student ID" VerticalAlignment="Top" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,74,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,110,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Width="109" Height="31"/>

        <TextBlock HorizontalAlignment="Left" Margin="54,140,0,0" TextWrapping="Wrap" Text="Adress" VerticalAlignment="Top" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,169,0,0" TextWrapping="Wrap" Text="Gender" VerticalAlignment="Top" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,1,0,0" TextWrapping="Wrap" Text="Modules" VerticalAlignment="Center" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,210,0,0" TextWrapping="Wrap" Text="Date Of  Birth" VerticalAlignment="Top" Width="109" Height="31"/>

        <TextBox HorizontalAlignment="Left" Margin="215,34,0,0" TextWrapping="Wrap" Text="{Binding Id}" VerticalAlignment="Top" Width="221"/>
        <TextBox HorizontalAlignment="Left" Margin="215,69,0,0" TextWrapping="Wrap" Text="{Binding FName }" VerticalAlignment="Top" Width="221"/>
        <TextBox HorizontalAlignment="Left" Margin="215,100,0,0" TextWrapping="Wrap" Text="{Binding LName}" VerticalAlignment="Top" Width="425"/>
        <TextBox HorizontalAlignment="Left" Margin="215,138,0,0" TextWrapping="Wrap" Text="{Binding Adres}" VerticalAlignment="Top" Width="425"/>
        <RadioButton x:Name="MaleRadioButton"  Content="Male" Margin="215,170,0,0" IsChecked="{Binding IsMale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <RadioButton x:Name="FemaleRadioButton" Content="Female" IsChecked="{Binding IsFemale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="385,170,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="215,210,0,0" TextWrapping="Wrap" Text="{Binding DoB}" VerticalAlignment="Top" Width="425"/>

        <ComboBox HorizontalAlignment="Left" Height="31" Margin="215,0,0,0" VerticalAlignment="Center" Width="131" ItemsSource="{Binding ModuleList}" DisplayMemberPath="ModuleName" SelectedItem="{Binding SelectedModule1}"/>
        <ComboBox HorizontalAlignment="Left" Height="31" Margin="385,0,0,0" VerticalAlignment="Center" Width="131" ItemsSource="{Binding ModuleList}" DisplayMemberPath="ModuleName" SelectedItem="{Binding selectedModule2}"/>
        <Button Content="Add Student" Command="{Binding AddStudentCommand}" VerticalAlignment="Top" Width="109" Height="31" Margin="7,300,10,100" />


    </Grid>
</Window>
