<Window x:Class="student_reg_system.Views.StudentRegView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:student_reg_system.ViewModels"
       
        mc:Ignorable="d"
        Title="StudentRegView" Height="450" Width="800">
    <Window.DataContext>
        <local:StudentRegVM/>
    </Window.DataContext>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="54,34,0,0" TextWrapping="Wrap" Text="Student ID" VerticalAlignment="Top" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,74,0,0" TextWrapping="Wrap" Text="Student Name" VerticalAlignment="Top" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,110,0,0" TextWrapping="Wrap" Text="Adress" VerticalAlignment="Top" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,159,0,0" TextWrapping="Wrap" Text="Gender" VerticalAlignment="Top" Width="109" Height="31"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,0,0,0" TextWrapping="Wrap" Text="Modules" VerticalAlignment="Center" Width="109" Height="31"/>
        <TextBox HorizontalAlignment="Left" Margin="215,34,0,0" TextWrapping="Wrap" Text="{Binding Id}" VerticalAlignment="Top" Width="221"/>
        <TextBox HorizontalAlignment="Left" Margin="215,72,0,0" TextWrapping="Wrap" Text="{Binding FirstName }" VerticalAlignment="Top" Width="221"/>
        <TextBox HorizontalAlignment="Left" Margin="215,108,0,0" TextWrapping="Wrap" Text="{Binding LastName}" VerticalAlignment="Top" Width="425"/>
        <RadioButton Content="Male" HorizontalAlignment="Left" Margin="215,159,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Female" HorizontalAlignment="Left" Margin="357,160,0,0" VerticalAlignment="Top"/>




        <ComboBox HorizontalAlignment="Left" Height="31" Margin="215,0,0,0" VerticalAlignment="Center" Width="131" ItemsSource="{Binding ModuleList}" DisplayMemberPath="ModuleNane"/>
        <ComboBox HorizontalAlignment="Left" Height="31" Margin="385,0,0,0" VerticalAlignment="Center" Width="131" ItemsSource="{Binding ModuleList}" DisplayMemberPath="ModuleNane"/> 
        

    </Grid>
</Window>
